<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:cardCornerRadius="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/fragment_community_card_viewheader"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/com_facebook_profile_picture_blank_square"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerInside"
                    android:id="@+id/fragment_community_card_userpicture"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/fragment_community_card_userpicture"
                    android:layout_toEndOf="@+id/fragment_community_card_userpicture"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_community_card_username"
                            android:text=""
                            android:layout_alignParentTop="true"

                            android:maxLength="40"
                            android:maxLines="2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_community_card_time"
                            android:text=""
                            android:layout_below="@+id/fragment_community_card_username"
                            android:layout_alignLeft="@+id/fragment_community_card_username"
                            android:layout_alignStart="@+id/fragment_community_card_username"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                       android:layout_weight="1"
                        android:src="@drawable/ic_pencil_black_18dp"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:tint="@color/grey_light"
                        android:id="@+id/fragment_community_card_edit"
                        android:layout_gravity="end"/>

                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_community_card_view_body"
                android:orientation="vertical"
                android:layout_below="@+id/fragment_community_card_viewheader"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="20"
                    android:text="this is a tzext to test mboaogho gafgDUIhudf higfdifgiFGIG GIgfigfiDGUI GIUFIDFGUDUFG IGUFGIDGFI y abilosgohsdngoavoaogaosfoafoaofoahfoaf 4 nosagongoahoghaohgoha apnfgpagpajpfjaofhohdofoahfoahfo 4 oadnfaosogfoafofaohdfohbadgboaboabgoabgobgab4 "
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/fragment_community_card_view_body_text"
                    android:layout_marginBottom="10dp"
                    android:maxLength="160"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:id="@+id/fragment_community_card_view_body_picture"
                    android:background="@color/black"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/fragment_community_card_view_footer"
                android:layout_below="@+id/fragment_community_card_view_body">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/fragment_community_card_view_footer_btn_like"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:src="@drawable/ic_thumb_up_outline_black_24dp"
                    android:tint="@color/colorPrimary"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="@color/grey_light"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
                <ImageButton
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:id="@+id/fragment_community_card_view_footer_btn_comment"
                    android:src="@drawable/ic_comment_black_24dp"
                    android:tint="@color/colorPrimary"
                   />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>